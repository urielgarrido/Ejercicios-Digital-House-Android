<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.uriel.miprimerholamundo.MainActivity">

    <TextView
        android:id="@+id/textview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/nombre_edittext_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/mensaje_lina_vacia" />

    <Button
        android:id="@+id/boton_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickDelBoton"
        android:text="@string/boton_confirmar" />

</LinearLayout>
